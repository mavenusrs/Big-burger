<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/more_margin"
              android:background="@android:color/white"
              android:orientation="horizontal">

    <ImageView
            android:id="@+id/ivOThumbnail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/bph"
            android:contentDescription="@string/thumbnail_desc"/>
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_margin="@dimen/fab_margin"
            android:background="@android:color/white"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minEms="2"
                    android:layout_weight="4"
                    android:gravity="left"
                    android:paddingRight="@dimen/fab_margin"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.WindowTitle"
                    android:textColor="@color/colorTitle"/>

            <TextView
                    android:id="@+id/tvCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minEms="2"
                    android:layout_weight="4"
                    android:gravity="left"
                    android:text="@string/count"
                    android:paddingRight="@dimen/fab_margin"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.WindowTitle"
                    android:textColor="@color/colorTitle"/>


            <ImageView android:id="@+id/btnDelete"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:layout_gravity="right"
                       android:layout_margin="@dimen/more_margin"
                       android:src="@android:drawable/ic_delete"/>

        </LinearLayout>

        <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minEms="2"
                android:maxLines="1"
                android:gravity="left"
                android:layout_marginTop="@dimen/fab_margin"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.WindowTitle"
                android:textColor="@color/colorTitle"
                tools:text="title"/>

        <TextView
                android:id="@+id/tvInstruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minEms="2"
                android:maxLines="1"
                android:gravity="left"
                android:layout_marginTop="@dimen/more_margin"
                android:layout_marginRight="@dimen/fab_margin"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.WindowTitle"
                android:textColor="@color/colorSubtitle"
                tools:text="title"/>

        <TextView
                android:id="@+id/tvPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/colorTitle"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                tools:text="TL"/>
    </LinearLayout>

</LinearLayout>